{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["src/**/*", "vite.config.js"],
    "exclude": ["node_modules", "dist"]
}

